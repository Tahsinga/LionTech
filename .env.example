# Copy this file to .env (do NOT commit the real .env containing secrets)
# Local development example environment variables

# SECRET_KEY: generate a long random string for production. For local dev, a placeholder is fine.
SECRET_KEY=django-insecure-local-placeholder-please-change

# DEBUG: set to 1 or true for local development. Must be false in production.
DEBUG=1

# ALLOWED_HOSTS: comma-separated hostnames for production (example)
ALLOWED_HOSTS=localhost,127.0.0.1

# DATABASE_URL: optional, e.g. postgres://user:pass@host:port/dbname
# DATABASE_URL=sqlite:///db.sqlite3

# For production when using S3 for media:
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# AWS_STORAGE_BUCKET_NAME=your_bucket
# AWS_S3_REGION_NAME=your_region
